{
    Type = Tool;
    Identifier = com.apple.compilers.yacc;
    Name = "Yacc";

    ExecPath = "$(YACC)";
    InputFileTypes = ( "sourcecode.yacc" );
    IsArchitectureNeutral = YES;

    Options = (
        /* Output */
        {
            Name = "YACC_GENERATED_FILE_STEM";
            Type = Enumeration;
            Values = (
                "Standard",
                "InputFileStem",
            );
            DefaultValue = "Standard";
            /* Used in code. */
        },


        /* Generation */
        {
            Name = "YACC_GENERATE_DEBUGGING_DIRECTIVES";
            Type = Boolean;
            DefaultValue = NO;
            CommandLineFlag = "-t";
        },
        {
            Name = "YACC_INSERT_LINE_DIRECTIVES";
            Type = Boolean;
            DefaultValue = YES;
            CommandLineFlagIfFalse = "-l";
        },


        /* Flags */
        {
            Name = "YACCFLAGS";
            Type = StringList;
            FileTypes = (
                "sourcecode.yacc",
            );
            DefaultValue = "";
            /* Added in code. */
        },
    );
}
